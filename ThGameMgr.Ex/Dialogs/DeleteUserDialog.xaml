<Window x:Class="ThGameMgr.Ex.Dialogs.DeleteUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThGameMgr.Ex.Dialogs"
        mc:Ignorable="d"
        Title="ユーザーの削除" Height="271" Width="318" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label 
            Content="ユーザー一覧:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="UsersListBox" Margin="10,41,10,39"/>
        <Button x:Name="DeleteButton"
            Width="90" Height="24"
            Content="削除(_D)" HorizontalAlignment="Right" Margin="0,0,105,10" VerticalAlignment="Bottom" Click="DeleteButtonClick"/>
        <Button x:Name="CancelButton"
            Width="90" Height="24"
            Content="キャンセル(_C)" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="CancelButtonClick"/>

    </Grid>
</Window>
