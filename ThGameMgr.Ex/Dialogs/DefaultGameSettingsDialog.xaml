<Window x:Class="ThGameMgr.Ex.Dialogs.DefaultGameSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThGameMgr.Ex.Dialogs"
        mc:Ignorable="d"
        Title="規定のゲームを設定する" Height="211" Width="323" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="東方管制塔の起動時に選択されるゲームを設定します。" VerticalAlignment="Top" Height="30"/>
        <ComboBox x:Name="DefaultGameConfigComboBox"
            Margin="10,62,10,0" VerticalAlignment="Top"/>
        <Button x:Name="OKButton"
            Width="90" Height="24"
            Content="_OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="OKButtonClick"/>

    </Grid>
</Window>
