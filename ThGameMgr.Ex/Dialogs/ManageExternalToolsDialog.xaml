<Window x:Class="ThGameMgr.Ex.Dialogs.ManageExternalToolsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThGameMgr.Ex.Dialogs"
        mc:Ignorable="d"
        Title="外部ツールの管理" Height="330" Width="371" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <ListBox x:Name="ExternalToolsListBox" Margin="10,10,105,10"/>
        <Button
            x:Name="AddButton"
            Width="90" Height="24"
            Content="追加(_A)" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Click="AddButtonClick"/>
        <Button
            x:Name="DeleteButton"
            Width="90" Height="24"
            Content="削除(_D)" HorizontalAlignment="Right" Margin="0,39,10,0" VerticalAlignment="Top" Click="DeleteButtonClick"/>

    </Grid>
</Window>
